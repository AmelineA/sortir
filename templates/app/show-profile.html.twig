{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Profil{% endblock %}

{% block content %}

    <div class="container">
        <h2>Profil de {{ user.username }}</h2>
        <div class="row">
            <div><!--col left-->
                <img src="" alt="profile photo">
            </div><!--col left-->

            <div><!--col right-->
                <label class="">Prénom</label>
                <p class=""> {{ user.firstName }}</p>
                <label>Nom</label>
                <p class=""> {{ user.name }}</p>
                <label>Téléphone</label>
                <p class=""> {{ user.telephone }}</p>
                <label>Email</label>
                <p class=""> {{ user.email }}</p>
                <label>Ville de rattachement</label>
                <p class=""> {{ user.site.name }}</p>
                    <a href="javascript:history.go(-1)"><button type="button" >Retour</button></a>
            </div><!--col right-->
        </div><!--row-->
    </div><!--container-->

{% endblock %}