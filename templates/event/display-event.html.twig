{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Evenement{% endblock %}

{% block content %}

    <h1>Détails de la sortie</h1>

    <div>
        <div>
            <div class="row"><label>Nom de la sortie : </label><p> {{ event.name }}</p></div>
            <div class="row"><label>Date et heure de la sortie : </label><p> {{ event.rdvTime | date("d/m/Y H:i")}}</p></div>
            <div class="row"><label>Date limite d'inscription : </label><p> {{ event.signOnDeadline |date("d/m/Y") }}</p></div>
            <div class="row"><label>Nombre de places : </label><p> {{ event.maxNumber }}</p></div>
            <div class="row"><label>Durée : </label><p> {{ event.duration }} minutes</p></div>
            <div class="row"><label>Description et infos : </label><p> {{ event.description }}</p></div>
        </div>
        <div>
            <div class="row"><label>Ville organisatrice : </label><p> {{ event.site.name }}</p></div>
            <div class="row"><label>Lieu : </label><p>#</p></div>
            <div class="row"><label>Rue : </label><p>#</p></div>
            <div class="row"><label>Code Postal : </label><p>#</p></div>
            <div class="row"><label>Latitude : </label><p>#</p></div>
            <div class="row"><label>Longitude : </label><p>#</p></div>
        </div>
    </div>

    <a href="javascript:history.go(-1)"><button type="button" >Retour</button></a>

    <div>
        <p>Liste des participants inscrits</p>
        <table class="table table-striped">
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            {% for participant in participants %}
                <tr>
                    <td><a href="{{ path('show_profile', {'id':participant.id}) }}">{{ participant.username }}</a></td>
                    <td><a href="{{ path('show_profile', {'id':participant.id}) }}">{{ participant.firstName }} {{ participant.name }}</a></td>

                </tr>
            {% endfor %}

        </table>
    </div>

{% endblock %}
