{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Annuler {% endblock %}

{% block content %}

    <h2 class="cancel-event-title">Annuler la sortie</h2>

        <div class="container event-display-cancel col-sm-4">
            <div class="row">
                <label for="event-name">Nom de la sortie : </label>
                <p class="offset-1" id="event-name"> {{ event.name }}</p>
            </div>
            <div class="row">
                <label for="event-rdvtime">Date de la sortie : </label>
                <p class="offset-1" id="event-rdvtime"> {{ event.rdvTime| date('d/m/Y') }}</p>
            </div>
            <div class="row">
                <label for="event-site">Site : </label>
                <p class="offset-1" id="event-site"> {{ event.site.name }}</p>
            </div>
            <div class="row">
                <label for="event-lieu">Lieu : </label>
                <p class="offset-1" id="event-lieu">  inconnu</p>
            </div>

        </div>
    <form action="{{ path('cancel_event', {'eventId':event.id}) }}" method="post">
        <div>
            <div>
               <div><label for="motif">Motif : </label></div>
                <textarea id="motif" name="motif"></textarea>
            </div>
        </div>
        <button class="btn btn-primary ">Annuler la sortie</button>

    </form>

{% endblock %}