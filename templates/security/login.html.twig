{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Connexion{% endblock %}

{% block content %}

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    Merci de vous diriger vers <a href="https://login.microsoftonline.com">Microsoft.</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
            <h1 class="">Connectez-vous</h1>

            <form method="post" novalidate="novalidate">
                {% if error %}
                    <div class="alert alert-danger">Mauvais identifiants!</div>
                {% endif %}
                <div class="form-group">
                    <label for="inputUsername" class="sr-only">Email ou pseudo</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                           placeholder="Email Campus ENI" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe Campus ENI" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                {#See https://symfony.com/doc/current/security/remember_me.html#}

                <div class="row-justify-between">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <a href="#myModal" data-toggle="modal">Mot de passe oublié</a>
                    {#AUTH#}
                    {#<a href="{{path('reset_password')}}">Mot de passe oublié</a>#}
                </div>
                <button class="btn btn-md btn-primary" type="submit">
                    Connexion
                </button>

            </form>

        </div>


{% endblock %}
