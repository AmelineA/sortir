{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Connexion{% endblock %}

{% block content %}

    <div class="container">

            <h1 class="">Connectez-vous</h1>

                <form method="post" novalidate="novalidate">
                    {% if error %}
                        <div class="alert alert-danger">Mauvais identifiants!</div>
                    {% endif %}
                    <div class="form-group">
                        <label for="inputUsername" class="sr-only">Email ou pseudo</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                               placeholder="Email ou pseudo" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                    {#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                    {#See https://symfony.com/doc/current/security/remember_me.html#}

                    <div class="row-justify-between">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>
                    {#<div>#}
                        <a href="{{path('reset_password')}}">Mot de passe oubli√©</a>
                    {#</div>#}
                    </div>
                    <button class="btn btn-md btn-primary" type="submit">
                        Connexion
                    </button>

                </form>
        </div>


{% endblock %}
